@page "/"
@using RazorApp.Models
@using RazorApp.Pages.ContactComponents

<h1>Hello, @GetUserName() welkommerce</h1>
<h2>The sum is: @GetSum(2,5)</h2>

<button @onclick="@ChangeNumber">Cambiar nombre</button>

@if(testNum == 100)
{
	<p>Num is 100</p>
}
else
{
	<p>Num is not 100</p>
}

@for(int i = 0; i < 2; i++)
{
	<p>Value of i: @i</p>
}

@foreach(Contact contact in contacts)
{
	<ContactComponent01 CurrentContact="@contact"></ContactComponent01>
}

<ArbitaryComponent @attributes="@(new Dictionary<string, object>
								{
									{"disabled", "disabled"},
									{"class", "form-control"},
									{"placeholder", "Cutting table"}
								})"></ArbitaryComponent>

@code{
	private string userName = "Pedro Pascal";
	private int testNum = 100;
	private List<string> names;
	private List<Contact> contacts;

	protected override void OnInitialized()
	{
		base.OnInitialized();
		names = new List<string>
		{
			"<b>value 1</b>",
			"value 2",
			"<strike>value 3</strike>",
			"value 4",
		};

		contacts = new List<Contact>
		{
			new Contact("Peter", "Ghille", "Raz@r"),
			new Contact("Peter2", "Ghille2", "Raz@r2"),
			new Contact("Peter2", "Ghille4", "Raz@r3"),
		};
	}
	private string GetUserName() {
		return userName;
	}
	private int GetSum(int a, int b) {
		return a + b;
	}
	private void ChangeName()
	{
		userName = "Peter";
	}
	private void ChangeNumber()
	{
		testNum = 2;
	}
}